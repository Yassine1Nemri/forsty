{% extends 'client/index.html.twig' %}

{% block title %}New Message{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h1>New Message to {{ receiver.username }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.content) }}
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
            <a href="{{ path('app_messenger_index') }}" class="btn btn-outline-secondary">Cancel</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}