{% extends 'client/index.html.twig' %}

{% block title %}Participation{% endblock %}

{% block body %}
    <h1>Participation</h1>

<table class="table table-hover">
        <div class="card">
    <div class="card-body">
        <h5 class="card-title">Participation : {{ participation.id }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{ participation.nom }} {{ participation.prenom }}</h6>
        <p class="card-text">Tel: {{ participation.tel }}</p>
         <p class="card-text">Email: {{ participation.email }}</p>


        <p class="card-text">Date: {{ participation.date ? participation.date|date('Y-m-d ') : 'Non spécifiée' }}</p>
       
    </div>
</div>

    </table>

 <a href="{{ path('app_participation_index') }}" class="card-link">Retour à la liste</a>
        <a href="{{ path('app_participation_edit', {'id': participation.id}) }}" class="card-link">Modifier</a>
        {{ include('participation/_delete_form.html.twig') }}

{% endblock %}
