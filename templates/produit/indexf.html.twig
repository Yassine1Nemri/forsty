{% extends 'client/index.html.twig' %}

{% block title %}Index des Produits{% endblock %}

{% block body %}
<div class="product-bg">
    <div class="product-bg-white">
        <div class="container">
            <div class="row">
                {% for produit in produits %}
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                <a href="{{ path('app_produit_showf', {'id': produit.id}) }}" >
                    <div class="product-box">
                        <i><img src="{{ asset('img/' ~ produit.image) }}"/></i>
                        <h3>{{ produit.nom }}</h3>
                        <span>{{ produit.prix }} €</span>
                        
                    </div></a>
                              <div>     <td>   <a href="{{ path('like', {'id': produit.id}) }}" class="btn btn-success rounded-pill py-2 px-4">
            <i class="fa fa-thumbs-up"></i> Like {{ produit.likes }}
        </a>

        <a href="{{ path('dislike', {'id': produit.id}) }}" class="btn btn-danger rounded-pill py-2 px-4">
            <i class="fa fa-thumbs-down"></i> Dislike {{ produit.dislikes }}
        </a></td> 
         </div>
                </div>
      
                {% else %}
                <div class="col-12">
                    <p class="text-center">Aucun produit trouvé</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- You can continue with the Clients_bg_white and yellow_bg sections here as they are -->



</div>
{% endblock %}
