{% extends 'admin/index.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>
    </br>
    <table class="table">
        <tbody>
          
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>category</th>
                <td>{{ produit.category }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('img/' ~ produit.image) }}" class="card-img-top" alt="#" style="height: 60px; width: 100px; object-fit: cover;"></td>
            </tr>
        </tbody>
    </table>

<style>
.button-group {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
}

.button-group form {
    margin: 0; /* Removes any default margin */
    display: inline-block; /* Helps the form fit into the flex layout */
}
</style>

<div class="button-group">
    <a href="{{ path('app_produit_index') }}" class="btn btn-dark">back to list</a>
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">edit</a>
    {{ include('produit/_delete_form.html.twig') }}
</div>


{% endblock %}
